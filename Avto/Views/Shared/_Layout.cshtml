<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@400;500;600;800&display=swap" rel="stylesheet"/>
	<title>@ViewData["Title"] - Avto</title>
	<environment include="Development">
		<link rel="stylesheet" href="~/css/layout.css" asp-append-version="true">
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="/css/layout-bundle.css" asp-append-version="true">
	</environment>
	@await RenderSectionAsync("Styles", required: false)
	<environment exclude="Development">
		@* important js, maybe analytics *@
	</environment>
</head>
<body>
<environment exclude="Development">
	<noscript>
		@* no script part of important, maybe analytics *@
	</noscript>
</environment>
<environment include="Development">
	<div id="development-mode"></div>
</environment>
<header>
	<div class="header-wrapper">
		<div class="logo">
			<img src="/images/icon/logo.png" alt="" title="">
		</div>
		<nav>
			<ul>
				<li>
					<a href="/#categories">Категория продуктов</a>
				</li>
				<li>
					<a href="/#services">Услуги</a>
				</li>
				<li>
					<a href="/#our-workers">Работы</a>
				</li>
				<li>
					<a href="/#about-us">О Нас</a>
				</li>
			</ul>
		</nav>
		<div class="contacts">
			<a href="https://t.me/TeyesSochi">
				<img src="/images/icon/telegramm.svg" alt="" title="">
			</a>
			<a href="https://wa.me/79189002272">
				<img src="/images/icon/watsapp.svg" alt="" title="">
			</a>
			<a href="tel:+79189002272">
				<img src="/images/icon/phone.svg" alt="" title="">
			</a>
		</div>
		<div class="hamburger">
			<div></div>
			<div></div>
			<div></div>
		</div>
	</div>
</header>
<main>
	@RenderBody()
</main>

<footer>
	<div class="wrapper">
		<div class="items">
			<nav class="item">
				<p class="header-f">Отзывы</p>
				<ul>
					<li>
						<a href="/#categories">Категория продуктов</a>
					</li>
					<li>
						<a href="/#services">Услуги</a>
					</li>
					<li>
						<a href="/#our-workers">Работы</a>
					</li>
					<li>
						<a href="/#about-us">О Нас</a>
					</li>
				</ul>
			</nav>
			<div class="item contacts">
				<p class="header-f">Контакты</p>
				<div class="contacts-wrapper">
					<div>
						<a href="tel:+79189002272">+7 918 900 22 72</a>
					</div>
					<div>
						<a href="tel:+79184086096">+7 918 408 60 96</a>
					</div>
					<div>
						<a href="mailto:teyes-sochi@mail.ru">teyes-sochi@mail.ru</a>
					</div>
					<div class="messenger">
						<a href="https://t.me/TeyesSochi">
							<img src="/images/icon/telegramm-w.svg" alt="" title="">
						</a>
						<a href="https://wa.me/79189002272">
							<img src="/images/icon/watsapp-w.svg" alt="" title="">
						</a>
						<a href="tel:+79189002272">
							<img src="/images/icon/phone-footer.svg" alt="" title="">
						</a>
					</div>
				</div>
			</div>
			<div class="item logo">
				<img src="/images/icon/logo-w.svg" alt="" title="">
				<div class="address">
					<img src="/images/icon/map-dot-w.svg" alt="" title="">
					<p>
						ул. Авиационная, 34
					</p>
				</div>
			</div>
		</div>
	</div>
</footer>
<div class="overlay" id="loader">
	@* place loader html here *@
</div>
<div class="overlay" id="overlay">
	<div class="modal" id="application">
		<form class="application-form">
			<span class="close-m" title="Закрыть">&times;</span>
			<h2>Оставьте заявку</h2>
			<p>Оставьте заявку, и мы перезвоним Вам в ближайшее время</p>
			<label>
				Имя
				<input placeholder="Введите имя" type="text" name="name">
			</label>
			<label class="label-number">
				Телефон
				<input placeholder="Введите номер" type="tel" name="phone">
			</label>
			<div class="validation"></div>
			<button type="submit">Оставить заявку</button>
		</form>
	</div>
	<div class="modal" id="application-success">
		<div>
			Заявка отправлена
		</div>
		<div>
			Совсем скоро мы Вам позвоним
		</div>
	</div>
	<div class="modal" id="application-error">
		<div>
			Что-то пошло не так
		</div>
		<div>
			Попробуйте позже пожалуйста или позвоните нам <a href="tel:+79189002272">+7 918 900 22 72</a>
		</div>
	</div>
	<div class="modal" id="review-success">
		<div>
			Ваш отзыв отправлен на модерацию и в скором времени будет размещен на сайте.
		</div>
		<div>
			Спасибо Вам за обратную связь!
		</div>
	</div>
	<div class="modal" id="review-error">
		<div>
			Что-то пошло не так
		</div>
		<div>
			Попробуйте позже пожалуйста или позвоните нам <a href="tel:+79189002272">+7 918 900 22 72</a>
		</div>
	</div>
</div>
<environment include="Development">
	<script src="~/js/phone-mask.js" asp-append-version="true"></script>
	<script src="~/js/api-request.js" asp-append-version="true"></script>
	<script src="~/js/loader.js" asp-append-version="true"></script>
	<script src="~/js/modal.js" asp-append-version="true"></script>
	<script src="~/js/helpers.js" asp-append-version="true"></script>
	<script src="~/js/form-request.js" asp-append-version="true"></script>
	<script src="~/js/layout.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
	<script src="~/js/layout-bundle.js" asp-append-version="true"></script>
</environment>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>